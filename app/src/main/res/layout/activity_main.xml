<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lightbrownbg" />

    <ImageView
        android:layout_width="413dp"
        android:layout_height="155dp"
        android:background="@drawable/brownbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="-21dp" />

    <ImageView
        android:layout_width="413dp"
        android:layout_height="155dp"
        android:background="@drawable/brownbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="590dp" />

    <ImageView
        android:id="@+id/whiteroundbg"
        android:layout_width="350dp"
        android:layout_height="750dp"
        android:background="@drawable/whiteroundbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/logo"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/whiteroundbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/login_email"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:layout_marginTop="50dp"
        android:background="@drawable/brownroundbg"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:drawableStart="@drawable/usernamelogo"
        android:padding="3dp"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toBottomOf="@id/login_logo"
        app:layout_constraintStart_toStartOf="@id/whiteroundbg"
        app:layout_constraintEnd_toEndOf="@id/whiteroundbg"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:background="@drawable/brownroundbg"
        android:textColorHint="@color/white"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/passwordlogo"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:padding="3dp"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toBottomOf="@id/login_email"
        app:layout_constraintStart_toStartOf="@id/whiteroundbg"
        app:layout_constraintEnd_toEndOf="@id/whiteroundbg"/>

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Sign In"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/black"
        android:backgroundTint="#a67a52"
        app:layout_constraintTop_toBottomOf="@id/login_password"
        app:layout_constraintStart_toStartOf="@id/whiteroundbg"
        app:layout_constraintEnd_toEndOf="@id/whiteroundbg"/>

    <TextView
        android:id="@+id/txt_question"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:textSize="18sp"
        android:text="Don't have an account? "
        app:layout_constraintEnd_toStartOf="@id/txt_signup"
        app:layout_constraintStart_toStartOf="@id/whiteroundbg"
        app:layout_constraintBottom_toBottomOf="@id/whiteroundbg"/>

    <TextView
        android:id="@+id/txt_signup"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:textSize="18sp"
        android:text="Sign Up"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/whiteroundbg"
        app:layout_constraintEnd_toEndOf="@id/whiteroundbg"
        app:layout_constraintStart_toEndOf="@id/txt_question" />


</androidx.constraintlayout.widget.ConstraintLayout>