<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reservation">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lightbrownbg"/>
    <ImageButton
        android:id="@+id/btn_backtodb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/arrow_back_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txt_loc1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/whiteroundbg"
        android:text=" Location 1 ..."
        android:textSize="21sp"
        android:padding="4dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txt_loc2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/whiteroundbg"
        android:text="Location 2 ..."
        android:textSize="21sp"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_loc1"/>
    <TextView
        android:id="@+id/txt_loc3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/whiteroundbg"
        android:text="Location 3 ..."
        android:textSize="21sp"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_loc2"/>

</androidx.constraintlayout.widget.ConstraintLayout>